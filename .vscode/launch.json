{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Broken: Main",
      "runtimeArgs": [
        "--preserve-symlinks",
        "--remote-debugging-port=9223",
        "./packages/Broken"
      ],
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/packages/Broken/node_modules/.bin/electron.cmd"
      },
      "sourceMaps": true,
      "outputCapture": "std",
      "preLaunchTask": "npm: build - packages/Broken"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Broken: Renderer Attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000,
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Broken",
      "configurations": ["Broken: Main", "Broken: Renderer Attach"]
    }
  ]
}
