{
  "compilerOptions": {
    "downlevelIteration": true,
    "composite": true,
    "incremental": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "Broken": ["./ts"]
    },
    "rootDir": "./ts",
    "outDir": "./target/ts",
    "tsBuildInfoFile": "./target/ts/tsconfig.tsbuildinfo"
  },
  "include": ["./ts/**/*.ts"]
}
